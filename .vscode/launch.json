{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "JWTSecret",
      "runtimeExecutable": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceRoot}/generateJWTSecret.js"],
      "restart": true,
      "stopOnEntry": false,
      "runtimeArgs": ["--exec", "babel-node"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Dev",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceRoot}/server.js"],
      "restart": true,
      "stopOnEntry": false,
      "runtimeArgs": ["--exec", "babel-node"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Jest Debug Tests Single Run",
      "type": "node",
      "request": "launch",
      "env": { "CI": "true" },
      // "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["test", "--runInBand", "--no-cache"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest Debug opened file",
      "type": "node",
      "request": "launch",
      // "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${fileBasenameNoExtension}", "--runInBand", "--no-cache"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
